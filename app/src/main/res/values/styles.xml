<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="android:actionMenuTextColor">@color/colorTextWhite</item>
    </style>

    <style name="AppTheme.Toolbar" parent="AppTheme">
        <item name="android:textColorPrimary">@color/colorTextBlack</item>
        <!--This line changes the color of icons in toolbar (back, overflow menu icons)-->
        <item name="android:textColorSecondary">@color/colorTextWhite</item>
        <item name="android:divider">@color/colorMenuDivider</item>
    </style>

    <style name="DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="textViewMemberInfoValue">

        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:gravity">center_horizontal</item>

    </style>
    <style name="textViewMemberInfoLabel">
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:gravity">center_horizontal</item>

    </style>

    <style name="horizontalDivider">
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:layout_marginTop">2dp</item>
    </style>

    <style name="verticalDivider">
        <item name="android:layout_marginStart">2dp</item>
        <item name="android:layout_marginEnd">2dp</item>
    </style>

    <style name="primaryButton">
        <item name="android:background">@drawable/selector_button_primary</item>
        <item name="android:textSize">@dimen/font_large</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/colorBackgroundWhite</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="borderedButton">
        <item name="android:background">@drawable/selector_border_green</item>
        <item name="android:textSize">@dimen/font_large</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@drawable/text_color_border_button</item>
        <item name="android:textStyle">bold</item>

    </style>
    <style name="borderedRedButton">
        <item name="android:background">@drawable/border_red</item>
        <item name="android:textSize">@dimen/font_large</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/colorTextRed</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="profileEditHeader">
        <item name="android:textSize">@dimen/font_large</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingTop">@dimen/padding_normal</item>
        <item name="android:paddingBottom">@dimen/padding_normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorTextBlack</item>
        <item name="android:textStyle">bold</item>

    </style>
    <style name="stylePageMargin">
        <item name="android:layout_marginStart">@dimen/et_page_margin_start</item>
        <item name="android:layout_marginEnd">@dimen/et_page_margin_end</item>
        <item name="android:layout_marginBottom">@dimen/et_page_margin_bottom</item>
    </style>
    <style name="stylePageMarginWithTop" parent="stylePageMargin">
        <item name="android:layout_marginTop">@dimen/et_page_margin_top</item>
    </style>


    <style name="MotoRaidoButton" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:colorControlNormal">@color/ef_grey</item>
        <item name="android:colorControlActivated">@color/moto_primary</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat</item>
    </style>

    <style name="EvRaidoButton" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:colorControlNormal">@color/ef_grey</item>
        <item name="android:colorControlActivated">@color/colorPrimary</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat</item>
    </style>

    <style name="EvCheckBox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:colorControlNormal">@color/ef_grey</item>
        <item name="android:colorControlActivated">@color/colorPrimary</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat</item>
    </style>


    <style name="MotoCheckBox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:colorControlNormal">@color/ef_grey</item>
        <item name="android:colorControlActivated">@color/moto_primary</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat</item>
    </style>

    <style name="MotoSwitch" parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="android:colorControlNormal">@color/lightGrey</item>
        <item name="android:colorControlActivated">@color/moto_primary</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat</item>
    </style>
    <style name="EvSwitch" parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="android:colorControlNormal">@color/lightGrey</item>
        <item name="android:colorControlActivated">@color/colorPrimary</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat</item>
    </style>
</resources>
