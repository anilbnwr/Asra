<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/event_training_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dashboard_margin_end"
        android:layout_alignParentEnd="true"
        android:gravity="end"
        android:padding="5dp"
        android:text="@string/ph_price"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/font_medium" />
    <com.asra.mobileapp.common.ETCheckBox
        android:id="@+id/checked_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@+id/event_training_price"
        android:checked="false"
        android:maxLines="2"
        android:padding="3dp"
        android:layout_marginStart="20dp"
        android:clickable="true"
        android:textAppearance="?android:textAppearanceSmall"
        tools:text="Call Mom" />
    <com.asra.mobileapp.common.Divider
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_height="@dimen/divider_size"
        android:layout_below="@+id/checked_text_view"
        android:background="@drawable/item_divider"/>
</RelativeLayout>