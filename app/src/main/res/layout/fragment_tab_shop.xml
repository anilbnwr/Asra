<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/margin_normal"
        android:background="@color/colorBackgroundGray">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <FrameLayout
                android:id="@+id/gear_banner_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/shop_banner_height"
                android:layout_alignParentTop="true">

                <ImageView
                    android:id="@+id/shopBackgroundBanner"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/banner_tab_gear"
                    android:contentDescription="@string/shop_cd_background" />
            </FrameLayout>

            <View
                android:id="@+id/separator"
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:layout_below="@+id/gear_banner_layout"
                android:layout_centerHorizontal="true">

            </View>

            <androidx.cardview.widget.CardView
                android:id="@+id/gear_archie_cards"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/gear_banner_layout"
                android:layout_alignParentStart="true"
                android:layout_marginStart="@dimen/dashboard_margin_start"
                android:layout_marginTop="@dimen/margin_large"
                android:layout_toStartOf="@+id/separator"
                android:elevation="3dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/shop_item_height">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true">

                        <ImageView
                            android:id="@+id/gear_icon_archie_cards"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/cardnew" />

                        <TextView
                            android:id="@+id/gear_label_archie_cards"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/gear_icon_archie_cards"
                            android:layout_marginTop="5dp"
                            android:gravity="center"
                            android:text="@string/shop_label_archie_cards"
                            android:textAllCaps="true"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/font_medium" />
                    </RelativeLayout>


                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/gear_rentals"
                android:layout_width="match_parent"
                android:layout_height="@dimen/shop_item_height"
                android:layout_below="@+id/gear_banner_layout"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/margin_large"
                android:layout_marginEnd="@dimen/dashboard_margin_start"
                android:layout_toEndOf="@+id/separator"
                android:elevation="3dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/shop_item_height">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true">

                        <ImageView
                            android:id="@+id/gear_icon_events"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/bikenew" />

                        <TextView
                            android:id="@+id/gear_label_events"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/gear_icon_events"
                            android:layout_marginTop="5dp"
                            android:gravity="center"
                            android:text="@string/shop_label_rentals"
                            android:textAllCaps="true"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/font_medium" />
                    </RelativeLayout>


                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/gear_gifts"
                android:layout_width="match_parent"
                android:layout_height="@dimen/shop_item_height"
                android:layout_below="@+id/gear_archie_cards"
                android:layout_marginStart="@dimen/dashboard_margin_start"
                android:layout_marginTop="@dimen/margin_normal"
                android:layout_marginBottom="@dimen/margin_normal"
                android:layout_toStartOf="@+id/separator"
                android:elevation="3dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/shop_item_height">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true">

                        <ImageView
                            android:id="@+id/gear_icon_gift"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/giftnew" />

                        <TextView
                            android:id="@+id/gear_label_gift"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/gear_icon_gift"
                            android:layout_marginTop="5dp"
                            android:gravity="center"
                            android:text="@string/shop_label_gift"
                            android:textAllCaps="true"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/font_medium" />
                    </RelativeLayout>


                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/gear_gear"
                android:layout_width="match_parent"
                android:layout_height="@dimen/shop_item_height"
                android:layout_below="@+id/gear_rentals"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/margin_normal"
                android:layout_marginEnd="@dimen/dashboard_margin_start"
                android:layout_toEndOf="@+id/separator"
                android:elevation="3dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/shop_item_height">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true">

                        <ImageView
                            android:id="@+id/gear_icon_gear"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/gearnew" />

                        <TextView
                            android:id="@+id/gear_label_gear"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/gear_icon_gear"
                            android:layout_marginTop="5dp"
                            android:gravity="center"
                            android:text="@string/shop_label_gear"
                            android:textAllCaps="true"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/font_medium" />
                    </RelativeLayout>


                </RelativeLayout>

            </androidx.cardview.widget.CardView>
        </RelativeLayout>

    </ScrollView>
</layout>