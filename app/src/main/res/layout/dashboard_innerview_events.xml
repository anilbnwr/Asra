<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
<TextView
    android:id="@+id/innerview1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="7dp"
    android:background="@color/colorLightGray"
    android:textSize="@dimen/font_medium"
    android:layout_marginBottom="3dp"
    android:text="April 2019"/>
    <TextView
        android:id="@+id/innerview2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="7dp"
        android:background="@color/colorLightGray"
        android:textSize="@dimen/font_medium"
        android:layout_marginBottom="3dp"
        android:text="May 2019"/>
    <TextView
        android:id="@+id/innerview3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="7dp"
        android:background="@color/colorLightGray"
        android:textSize="@dimen/font_medium"
        android:layout_marginBottom="3dp"
        android:text="Jun 2019"/>
    <TextView
        android:id="@+id/innerview4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="7dp"
        android:background="@color/colorLightGray"
        android:textSize="@dimen/font_medium"
        android:layout_marginBottom="3dp"
        android:text="July 2019"/>

    <TextView
        android:id="@+id/btn_see_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_gravity="right"
        android:layout_marginEnd="@dimen/dashboard_margin_end"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/font_medium"
        android:text="@string/label_see_more"/>
</LinearLayout>